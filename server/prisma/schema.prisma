generator client {
  provider   = "prisma-client"
  output     = "../src/generated/prisma"
  engineType = "client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         BigInt   @id @db.BigInt
  userId     Int      @unique
  username   String   @db.VarChar(191)
  fullName   String?  @db.VarChar(191)
  avatar     String?  @db.VarChar(191)
  password   String   @db.VarChar(191)
  createdAt  DateTime @default(now()) @db.DateTime(3)
  updatedAt  DateTime @db.DateTime(3)
  superAdmin Int      @default(0) @db.TinyInt

  @@map("user")
}

model Tag {
  id          BigInt   @id @db.BigInt
  name        String   @unique @db.VarChar(100)
  description String?  @db.VarChar(255)
  createdAt   DateTime @default(now()) @db.DateTime(3)
  updatedAt   DateTime @db.DateTime(3)

  @@map("tag")
}
